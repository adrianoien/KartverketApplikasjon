@model DashboardViewModel

<div class="container">
    <h2>Corrections Management Dashboard</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">PENDING REVIEWS</h5>
                    <h2>@Model.PendingCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">APPROVED THIS WEEK</h5>
                    <h2>@Model.ApprovedThisWeek</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">REJECTED THIS WEEK</h5>
                    <h2>@Model.RejectedThisWeek</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Submissions</h5>
                    <div class="list-group">
                        @if (Model.RecentMapCorrections.Any())
                        {
                            <h6 class="mt-3">Map Corrections</h6>
                            @foreach (var correction in Model.RecentMapCorrections)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@correction.Description</h6>
                                        <small>@correction.SubmittedDate.ToString("g")</small>
                                    </div>
                                    <p class="mb-1">Location: [@correction.Latitude, @correction.Longitude]</p>
                                    <small>Submitted by: @correction.SubmittedBy</small>
                                    <span class="badge bg-@(correction.Status switch {
                                        CorrectionStatus.Pending => "warning",
                                        CorrectionStatus.Approved => "success",
                                        CorrectionStatus.Rejected => "danger",
                                        _ => "secondary"
                                    })">@correction.Status</span>
                                </div>
                            }
                        }

                        @if (Model.RecentAreaChanges.Any())
                        {
                            <h6 class="mt-3">Area Changes</h6>
                            @foreach (var change in Model.RecentAreaChanges)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@change.Description</h6>
                                        <small>@change.SubmittedDate.ToString("g")</small>
                                    </div>
                                    <small>Submitted by: @change.SubmittedBy</small>
                                    <span class="badge bg-@(change.Status switch {
                                        CorrectionStatus.Pending => "warning",
                                        CorrectionStatus.Approved => "success",
                                        CorrectionStatus.Rejected => "danger",
                                        _ => "secondary"
                                    })">@change.Status</span>
                                </div>
                            }
                        }

                        @if (!Model.RecentMapCorrections.Any() && !Model.RecentAreaChanges.Any())
                        {
                            <div class="list-group-item">
                                <p class="mb-0 text-muted">No recent submissions</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="list-group">
                        <a href="@Url.Action("Index", new { status = "Pending" })" class="list-group-item list-group-item-action">
                            View Pending Reviews
                        </a>
                        <a href="@Url.Action("Index", new { status = "All" })" class="list-group-item list-group-item-action">
                            View All Submissions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>